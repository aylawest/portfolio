---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<header aria-label="Main header">
  <div class="container">
    <h1>{title}</h1>
  </div>
</header>

<style>
  header {
    background-color: var(--background-mod);
  }
  h1 {
		font-size: 2em;
    color: var(--body-mod);
	}
</style>